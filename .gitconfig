[user]
  name = Joe Cai
  email = joey.cai@gmail.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
  default = matching

[alias]
  ci = commit
  co = checkout
  df = diff
  lg = log -p
  who = shortlog -s --
  cp = cherry-pick
  lc = log ORIG_HEAD.. --stat --no-merges
  graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
[log]
  date=local
[core]
  quotepath = false
	autocrlf = false
	filemode = false
[http]
  sslVerify = false
[credential]
  helper = store
[merge]
  tool = vimdiff

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[pager]
  status = true
[status]
	submoduleSummary = true
